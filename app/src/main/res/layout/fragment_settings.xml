<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main.SettingsFragment">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Nazwa użytkownika:"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tvName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/btnSaveName"

        android:inputType="text"
        android:textColor="@color/text"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSaveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:text="Zmień" />


    <Button
        android:id="@+id/btnSignout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyloguj się"
        android:layout_below="@id/etName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_logout_24"
        />

    <Button
        android:id="@+id/btnSetStatuses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modyfikuj listę statusów"
        android:layout_below="@id/btnSignout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_list_24"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btnSetThreats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modyfikuj listę zagrożeń"
        android:layout_below="@id/btnSetStatuses"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_list_24"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btnSetRegions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modyfikuj listę regionów"
        android:layout_below="@id/btnSetThreats"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_list_24"
        android:visibility="gone"
        />



</RelativeLayout>