<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.DashboardFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/status_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Twój aktualny status:"
                android:textSize="25sp"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="25sp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@id/txt1"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <Button
                android:id="@+id/btn_changeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Zmień status"

                app:layout_constraintTop_toBottomOf="@+id/txt_status"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"

                app:layout_constraintTop_toBottomOf="@id/btn_changeStatus"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/event_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"

        app:layout_constraintTop_toBottomOf="@id/status_card"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Zdarzenie:"
                android:textSize="25sp"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/txt_eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Pożar"
                android:textSize="22sp"

                app:layout_constraintTop_toBottomOf="@+id/txt2"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/txt_eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="ul. Rejtana 16, Warszawa"
                android:textSize="22sp"

                app:layout_constraintTop_toBottomOf="@+id/txt_eventTitle"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />


            <ImageButton
                android:id="@+id/btn_eventMap"
                android:layout_width="50dp"
                android:layout_height="40dp"

                android:background="@drawable/ic_outline_map_24"

                app:layout_constraintTop_toBottomOf="@+id/txt_eventLocation"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"

                app:layout_constraintTop_toBottomOf="@id/btn_eventMap"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/participation_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"

        app:layout_constraintTop_toBottomOf="@id/event_card"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Uczestnictwo:"
                android:textSize="25sp"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>

            <Button
                android:id="@+id/btn_acceptEventParticipation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Wezmę udział"

                app:layout_constraintTop_toBottomOf="@id/txt3"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"

                />

            <Button
                android:id="@+id/btn_declineEventParticipation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Nie mogę wziąć udziału"

                app:layout_constraintTop_toBottomOf="@id/btn_acceptEventParticipation"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"

                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"

                app:layout_constraintTop_toBottomOf="@id/btn_declineEventParticipation"
                app:layout_constraintEnd_toEndOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>